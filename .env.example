# IPTV Server Configuration Example
# Copy this file to .env and replace with your actual credentials

IPTV_SERVER_URL=http://cf.its-cdn.me
IPTV_USERNAME=1498fb9676b4
IPTV_PASSWORD=d808eed40f

# Optional: Inject server URL for streaming
# INJECT_SERVER_URL=http://your-inject-server.com

# NGINX-RTMP Docker Configuration
NGINX_RTMP_PORT=1935
NGINX_HTTP_PORT=8080
NGINX_ADMIN_PORT=8081

# Jellyfin Media Server Configuration
JELLYFIN_HTTP_PORT=8096
JELLYFIN_HTTPS_PORT=8920

# USB Drive Mount Paths
# Update these paths to match your USB drive mount location
USB_RECORDS_PATH=/mnt/media/RECORDS
USB_MOVIES_PATH=/mnt/media/MOVIES
USB_MUSIC_PATH=/mnt/media/MUSIC
USB_PHOTOS_PATH=/mnt/media/PHOTOS

# Legacy path (deprecated - use USB_* paths above)
JELLYFIN_MEDIA_PATH=/mnt/media

# Samba Network Share Configuration
SAMBA_NETBIOS_PORT=137
SAMBA_NETBIOS_DGM_PORT=138
SAMBA_NETBIOS_SSN_PORT=139
SAMBA_SMB_PORT=445
# Timezone for Samba container
TZ=UTC